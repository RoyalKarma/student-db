<Page x:Class="app.StudentInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Student Info">

    <Grid>
        <Button x:Name="AddGradeButton" Content="Add grade" HorizontalAlignment="Left" Margin="10,0,0,10" Width="100" Height="32" VerticalAlignment="Bottom" Click="AddGradeButton_Click"/>
        <Button x:Name="DeleteGradeButton" Content="Delete grade" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="32" Width="120" Margin="0,0,10,10" Click="DeleteGradeButton_Click"/>
        <Button x:Name="ModifyGradeButton" Content="Modify Grade" HorizontalAlignment="Left" Margin="115,0,0,10" Width="130" VerticalAlignment="Bottom" Height="32" Click="ModifyGradeButton_Click"/>
        <DataGrid Name="GradeGrid" ItemsSource="{Binding Mode=OneWay}" AutoGenerateColumns="False" Margin="18,201,23,60" AlternationCount="2" AlternatingRowBackground="DarkGray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name"  Binding="{Binding first_name, Mode=OneWay}"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding last_name, Mode=OneWay}" />
                <DataGridTextColumn Header="Year" Binding="{Binding year, Mode=OneWay}" />
                <DataGridTextColumn Header="Subject" Binding="{Binding subject_name, Mode=OneWay}" />
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="StudentNameLabel" Content="Student" Margin="18,8,325,0" VerticalAlignment="Top" Height="169"/>
        <ComboBox x:Name="SubjectsMenu" ItemsSource="{Binding subject_name}" HorizontalAlignment="Left" Margin="522,10,0,0" VerticalAlignment="Top" Width="127" Height="20" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>
                <CheckBox Content="{Binding subject_name}"/>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</Page>
